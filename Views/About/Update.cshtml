@model About
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4" style="background-color: #1e2124; min-height: 100vh;">
    <div class="row g-4">
        <div class="col-12">
            <div class="rounded h-100 p-4" style="background-color: #6c757d; color: #f8f9fa; box-shadow: 0 0 15px rgba(0,0,0,0.5);">
                <h6 class="mb-4">Hakkımızda Güncelleme Sayfası</h6>
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="AboutID" />

                    <label>Başlık 1</label>
                    <input type="text" asp-for="Title" class="form-control bg-dark text-white border-0" />
                    <br />

                    <label>Başlık 2</label>
                    <input type="text" asp-for="Title2" class="form-control bg-dark text-white border-0" />
                    <br />

                    <label>Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control bg-dark text-white border-0" />
                    <br />

                    <label>Mevcut Görsel</label><br />
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Hizmet Görseli" width="150" class="mb-2" />
                    }
                    else
                    {
                        <p style="color: red;">Görsel bulunamadı.</p>
                    }
                    <br />

                    <label>Yeni Görsel Yükle (İsteğe Bağlı)</label>
                    <input type="file" name="ImageFile" class="form-control bg-dark text-white border-0" accept="image/*" />
                    <br />

                    <button class="btn btn-success">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

