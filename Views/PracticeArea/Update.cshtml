@model PracticeArea
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4" style="background-color: #1e2124; min-height: 100vh;">
    <div class="row g-4">
        <div class="col-12">
            <div class="rounded h-100 p-4" style="background-color: #6c757d; color: #f8f9fa; box-shadow: 0 0 15px rgba(0,0,0,0.5);">
                <h6 class="mb-4">Hizmet Güncelleme Sayfası</h6>
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="PracticeAreaID" />

                    <label>Hukuk Türü</label>
                    <select asp-for="LawTypesID" class="form-control bg-dark text-white border-0" asp-items="ViewBag.v1"></select>
                    <br />

                    <label>Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control bg-dark text-white border-0" />
                    <br />

                    <label>İkon</label>
                    <input type="text" asp-for="Icon" class="form-control bg-dark text-white border-0"  />
                    <br />

                    <label>Mevcut Görsel</label><br />
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" width="150" class="mb-2 rounded shadow" />
                    }
                    <br />

                    <label>Yeni Görsel Yükle (İsteğe Bağlı)</label>
                    <input type="file" name="ImageFile" class="form-control bg-dark text-white border-0" accept="image/*" />
                    <br />

                    <button class="btn btn-success">Hizmeti Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
