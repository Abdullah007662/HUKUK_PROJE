@model PracticeArea
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4" style="background-color: #1e2124; min-height: 100vh;">
    <div class="row g-4">
        <div class="col-12">
            <div class="rounded h-100 p-4" style="background-color: #6c757d; color: #f8f9fa; box-shadow: 0 0 15px rgba(0,0,0,0.5);">
                <h6 class="mb-4">Hizmet Ekleme Sayfası</h6>
                <form method="post">

                    <label>Başlık</label>
                    <input type="text" asp-for="Title" class="form-control bg-dark text-white border-0" />
                    <br />

                    <label>Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control bg-dark text-white border-0" />
                    <br />

                    <label>Görsel</label>
                    <input type="text" asp-for="ImageUrl" class="form-control bg-dark text-white border-0" />
                    <br />

                    <label>İkon</label>
                    <input type="text" asp-for="Icon" class="form-control bg-dark text-white border-0" />
                    <br />

                    <button class="btn btn-primary">Hizmeti Ekle</button>
                </form>

            </div>
        </div>
    </div>
</div>

