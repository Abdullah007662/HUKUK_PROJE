@model List<PracticeArea>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<!-- FontAwesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<!-- Flaticon -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/flaticon/3.0.1/font/flaticon.css" rel="stylesheet" />

<link href="https://cdn.jsdelivr.net/npm/flaticon@3.0.1/font/flaticon.css" rel="stylesheet" />


<!-- SweetAlert -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    img {
        border-radius: 50%;
    }

    i.fa-icon {
        font-size: 24px;
        color: #333;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="card-title">Hizmetlerimiz</h4>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Görsel</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>
                                    <img src="@item.ImageUrl" height="50" width="50" />
                                </td>
                                <td>
                                    <a href="/PracticeArea/Update/@item.PracticeAreaID" class="btn btn-success">Güncelle</a>
                                </td>
                                <td>
                                    <button class="btn btn-danger" onclick="confirmDelete(@item.PracticeAreaID)">Sil</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/PracticeArea/Create/" class="btn btn-primary">Yeni Hizmet Girişi</a>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(practiceareaId) {
        Swal.fire({
            title: "Emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Evet, sil!",
            cancelButtonText: "Hayır, iptal et"
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/PracticeArea/Delete/${practiceareaId}`, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    }
                }).then(response => {
                    if (response.ok) {
                        Swal.fire("Silindi!", "Kayıt başarıyla silindi.", "success").then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire("Hata!", "Kayıt silinemedi.", "error");
                    }
                });
            }
        });
    }
</script>
