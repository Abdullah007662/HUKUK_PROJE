@model List<About>
<div class="about_area">
    <div class="opacity_icon d-none d-lg-block">
        <i class="flaticon-balance"></i>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-6 col-md-6">
                    <div class="single_about_info text-center">
                        <div class="about_thumb">
                            <img src="/aboutimages/1.png" alt="">
                        </div>
                        <h3>
                            @item.Title<br>
                            @item.Title2
                        </h3>
                        <p>
                            @item.Description
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Sayfayı ortalamak için düzenleme */
    .about_area {
        display: flex;
        justify-content: center; /* Yatayda ortalama */
        align-items: center; /* Dikeyde ortalama */
        height: 100vh; /* Sayfa yüksekliği kadar */
        padding: 0; /* İç boşluğu kaldır */
    }

    .container {
        display: flex;
        flex-direction: column; /* İçerik sütun olarak düzenlendi */
        align-items: center; /* Yatayda ortalama */
        padding: 0 15px; /* Sağ ve sol kenarlardan biraz boşluk */
    }

    .row {
        display: flex;
        justify-content: center; /* Yatayda öğeleri ortalamak */
        flex-wrap: wrap; /* Öğeleri alt satıra kaydırmak */
        width: 100%;
    }

    .col-xl-6, .col-md-6 {
        display: flex;
        justify-content: center; /* Yatayda ortalama */
        align-items: center; /* Dikeyde ortalama */
        text-align: center; /* İçeriklerin ortalanması */
        padding: 10px; /* Her öğe arasında boşluk bırakmak */
    }

    .single_about_info {
        max-width: 500px; /* Öğelerin maksimum genişliği */
        padding: 20px;
    }

    .about_thumb img {
        max-width: 100%; /* Resimlerin kapsayıcıya göre genişliği */
        height: auto;
    }

    .single_about_info h3 {
        margin-top: 15px;
        font-size: 2rem; /* Başlık boyutunu büyütmek */
        color: #333;
    }

    .single_about_info p {
        font-size: 1.2rem; /* Yazı boyutunu büyütmek */
        color: #666;
        margin-top: 10px;
    }
</style>
