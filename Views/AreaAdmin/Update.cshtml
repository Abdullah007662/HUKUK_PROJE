@model Area
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Admin/Index.cshtml";
}

<!-- TinyMCE Script'i -->
<script src="https://cdn.tiny.cloud/1/kxdltrxw6nyvs3n8gp9fi4f0f7nx0avgvpxdqs0vm95961as/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

<div class="container-fluid pt-4 px-4" style="background-color: #1e2124; min-height: 100vh;">
    <div class="row g-4">
        <div class="col-12">
            <div class="rounded h-100 p-4" style="background-color: #6c757d; color: #f8f9fa; box-shadow: 0 0 15px rgba(0,0,0,0.5);">
                <h6 class="mb-4">Alan Güncelleme Sayfası</h6>
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="AreaID" />

                    <label>Hukuk Türü</label>
                    <select asp-for="LawTypesID" class="form-control bg-dark text-white border-0" asp-items="ViewBag.v1">
                        <option disabled selected>Bir hukuk türü seçin</option>
                    </select>
                    <br />

                    <label>Açıklama</label>
                    <!-- TinyMCE Editörlü alan -->
                    <textarea asp-for="Description" id="descriptionEditor" class="form-control bg-dark text-white border-0" rows="10"></textarea>
                    <br />

                    <label>Mevcut Görsel</label><br />
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Görsel" width="150" class="mb-2" />
                    }
                    else
                    {
                        <p style="color: red;">Görsel bulunamadı.</p>
                    }
                    <br />

                    <label>Yeni Görsel Yükle (İsteğe Bağlı)</label>
                    <input type="file" name="ImageFile" class="form-control bg-dark text-white border-0" accept="image/*" />
                    <br />

                    <button class="btn btn-success">Hizmeti Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- TinyMCE Başlatma -->
<script>
    tinymce.init({
        selector: '#descriptionEditor',
        plugins: [
            'anchor', 'autolink', 'charmap', 'codesample', 'emoticons',
            'image', 'link', 'lists', 'searchreplace', 'table',
            'visualblocks', 'wordcount'
        ],
        toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat'
    });
</script>
