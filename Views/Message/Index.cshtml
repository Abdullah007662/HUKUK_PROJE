@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="card-title">Mesaj Tablosu</h4>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Telefon Numarası</th>
                            <th>Tarih</th>
                            <th>Saat</th>
                            <th>Türü</th>
                            <th>Detaylar</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NameSurname</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.AppointmentDate.ToString("dd - MMMM - yyyy")</td>
                                <td>@item.AppointmentTime.ToString(@"hh\:mm")</td>
                                <td>@(item.LawTypes != null ? item.LawTypes.Type : "Bilinmiyor")</td>
                                <td><a href="#" class="btn btn-primary">Detaylar</a></td>
                                <td><a href="#" class="btn btn-success">Güncelle</a></td>
                                <td>
                                    <button class="btn btn-danger" onclick="confirmDelete(@item.ContactID)">Sil</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(contactId) {
        Swal.fire({
            title: "Emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Evet, sil!",
            cancelButtonText: "Hayır, iptal et"
        }).then((result) => {
            if (result.isConfirmed) {
               
                fetch(`/Message/Delete/${contactId}`, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    }
                }).then(response => {
                    if (response.ok) {
                        Swal.fire("Silindi!", "Kayıt başarıyla silindi.", "success").then(() => {
                            location.reload(); 
                        });
                    } else {
                        Swal.fire("Hata!", "Kayıt silinemedi.", "error");
                    }
                });
            }
        });
    }
</script>
