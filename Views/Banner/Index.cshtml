@model List<Banner>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="card-title">Site Afiş Ekranı</h4>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Güncelle</th>
                            <th>Sil</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><a href="/Banner/Update/@item.BannerID" class="btn btn-success">Güncelle</a></td>
                                <td><a href="/Banner/Delete/@item.BannerID" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
